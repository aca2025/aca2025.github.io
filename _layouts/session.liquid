{% assign talks = site.data.talks | sort: 'start' | where_exp: "item", "item.session==page.AA"  %}

{% assign speakers = "" | split: ',' %}
{% for talk in talks %}  
    {% assign speaker = site.data.participants |  where_exp: "item", "item.id==talk.speaker"  %}
    {% assign speakers = speakers | push: data. speaker %}
{% endfor %}


{% assign speakers = site.data.participants | sort: 'name' | where_exp: "item", "item.id==page.AA"  %}

<h2>SS{{ page.AA }} - {{  page.title }}</h2>
<h3> link to the <a href="{{ page.webpage}}">session's webpage</a></h3> 
<br><br>
{{ page.content }}

<br><br>

<h3>Session organizers</h3>

  <table class="table table-striped">
  <tbody>
    {% for organizer in page.organizers %}  
      <tr>
        <td style="text-align: left"><strong><a href="{{ organizer.homepage }}">{{ organizer.name }}</a></strong> ({{ organizer.org }})</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
 

<br><br>

<h3>Timetable</h3>
<table class="table table-striped">
  <tbody>
    {% for talk in talks %}  
      <tr>
        <td style="text-align: left">{{ talk.title }} {{ talk.speaker }} </td>
      </tr>
    {% endfor %}
  </tbody>
</table>
 
<h3>Speakers</h3>
<table class="table table-striped">
  <tbody>
    {% for speaker in page.speakers %}  
      <tr>
        <td style="text-align: left"><strong><a href="{{ speaker.homepage }}">{{ speaker.name }}</a></strong> ({{ speaker.org }})</td>
      </tr>
    {% endfor %}
  </tbody>
</table>
 
 